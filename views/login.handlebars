<main class="container mt-5">
  <h1 class="mb-4">Login</h1>
  <form class="technology-login-form">
    <div class="mb-3">
      <label for="username-technology-login" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        id="username-technology-login"
        placeholder="Username"
      />
    </div>
    <div class="mb-3">
      <label for="password-technology-login" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password-technology-login"
        placeholder="Password"
      />
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>

</main>