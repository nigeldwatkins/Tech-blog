<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nigel's Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css" />
  </head>
  <body class="bg-dark text-white">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand fs-2" href="/views/layouts/main.handlebars">Nigel's Tech Blog</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/views/homepage.handlebars">Home</a>
              </li>
                <li class="nav-item">
                  <a class="nav-link" href="/views/dashboard.handlebars">Dashboard</a>
                </li>
              {{#if logged_in}}
                <li class="nav-item">
                  <a class="nav-link" href="#" id="technology-logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/views/login.handlebars">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/views/signup.handlebars">Sign Up</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container" style="margin-bottom: 15vh;">
      {{{body}}}
    </div>
    <script src="/public2/js/delete-post.js"></script>
    <script src="/public2/js/login.js"></script>
    <script src="/public2/js/logout.js"></script>
    <script src="/public2/js/new-post.js"></script>
    <script src="/public2/js/signup.js"></script>
    <script src="/public2/js/edit-post.js"></script>
    <script src="/public2/js/new-comment.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>